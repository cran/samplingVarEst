citHeader("To cite package 'samplingVarEst' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry = "Manual",
         title = "samplingVarEst: Sampling Variance Estimation",
         author = personList(as.person("Emilio Lopez Escobar"),
                             as.person("Ernesto Barrios Zamudio")),
         year = year,
         note = vers,

         textVersion =
         paste0("Emilio Lopez Escobar and Ernesto Barrios Zamudio (",
                year,
                "). samplingVarEst: Sampling Variance Estimation. ",
                vers, "."))

